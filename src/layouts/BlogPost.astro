---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { authors } from '../lib/authors';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, author } = Astro.props;

const authorInfo = author ? authors[author] : null;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="meta">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<span class="last-updated">
									(updated <FormattedDate date={updatedDate} />)
								</span>
							)}
						</div>
						<h1>{title}</h1>
						{authorInfo && (
							<div class="author-badge">
								{'avatars' in authorInfo ? (
									<div class="author-avatars">
										{authorInfo.avatars.map((src: string) => (
											<img src={src} alt="" class="author-avatar" />
										))}
									</div>
								) : (
									<img src={authorInfo.avatar} alt={authorInfo.name} class="author-avatar" />
								)}
								<span>{authorInfo.emoji} {authorInfo.name}</span>
							</div>
						)}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: calc(100% - 2em);
		max-width: 100%;
		margin: 0;
	}
	.hero-image {
		width: 100%;
	}
	.hero-image img {
		display: block;
		margin: 0 auto;
		border-radius: 12px;
		border: 1px solid var(--border-subtle);
		box-shadow: var(--box-shadow);
	}
	.prose {
		width: 720px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 1em;
		color: var(--text-primary);
	}
	.prose :global(h2) {
		color: var(--accent);
		margin-top: 2em;
	}
	.prose :global(h3) {
		color: var(--accent-secondary);
		margin-top: 1.5em;
	}
	.prose :global(em) {
		color: var(--text-secondary);
	}
	.title {
		margin-bottom: 1em;
		padding: 1em 0;
		text-align: center;
		line-height: 1;
	}
	.title h1 {
		margin: 0.25em 0 0.5em;
	}
	.meta {
		color: var(--text-muted);
		font-size: 0.9em;
		margin-bottom: 0.5em;
	}
	.last-updated {
		font-style: italic;
		color: var(--text-muted);
	}
	.author-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		padding: 0.3em 0.8em;
		background: var(--bg-card);
		border: 1px solid var(--border-subtle);
		border-radius: 20px;
		font-size: 0.85em;
		color: var(--text-secondary);
	}
	.author-avatars {
		display: flex;
	}
	.author-avatars .author-avatar {
		margin-right: -8px;
		border: 2px solid var(--bg-card);
	}
	.author-avatars .author-avatar:last-child {
		margin-right: 0;
	}
	.author-avatar {
		width: 28px;
		height: 28px;
		border-radius: 50%;
		object-fit: cover;
	}
</style>
